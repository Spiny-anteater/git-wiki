!!! XML
!!! 1.1
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
    %title= Wiki::App.config['title'] + ' - ' + @title
    %link{:rel => 'stylesheet', :href => '/style.css', :type => 'text/css'}
    %link{:rel => 'stylesheet', :href => '/sys/highlight.css', :type => 'text/css'}
    %script{:src=>'/sys/script/jquery/jquery-1.3.1.js', :type=>'text/javascript'}
    %script{:src=>'/sys/script/jquery/ui.core.js', :type=>'text/javascript'}
    %script{:src=>'/sys/script/jquery/ui.tabs.js', :type=>'text/javascript'}
    %script{:src=>'/sys/script/jquery/tablesorter.js', :type=>'text/javascript'}
    %script{:src=>'/sys/script/app.js', :type=>'text/javascript'}
    - if @feed
      %link{:rel => 'alternate',  :href => @feed, :type => 'application/rss+xml', :title=> 'RSS'}
  - object = @object || @page || @tree
  - timemachine = object && !object.current?
  %body{timemachine ? {:class => 'timemachine'} : {}}
    #header
      %h1&= Wiki::App.config['title']
      - if timemachine
        %h1.timemachine Time Machine
      #info
        User
        %a{:href=>'/profile'}= @user.name
        |
        - if @user.anonymous?
          %a{:href=>'/login'} Login
        - else
          %a{:href=>'/logout'} Logout
      #search
        %form{:action=>'/search',:method=>'get'}
          %input.clear{:type=>'text',:name=>'pattern', :value=> params[:pattern] || 'Search'}
    #menu= menu(object)
    #container
      #body
        #sidebar= sidebar
        #content
          %h1= @title
          = yield
      #footer
        Powered by
        %a{:href=>'http://github.com/minad/git-wiki/tree/master'} Git-Wiki
        - if @footer
          |
          = @footer
